<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:clipToPadding="false"
    android:id="@+id/group_tile_LL"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        iosched:cardBackgroundColor="#fff"
        iosched:cardCornerRadius="@dimen/card_corner_radius"
        iosched:cardElevation="@dimen/card_elevation"
        iosched:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_height="wrap_content"
                android:background="@color/tile_bg"
                android:layout_width="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/group_tile_person_img"
                    android:layout_width="50dp"
                    android:layout_weight="0"
                    android:layout_height="50dp"
                    android:background="@drawable/person_image_empty"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:textSize="@dimen/text_size_large"
                    android:fontFamily="@string/font_fontFamily_medium"
                    android:textColor="@color/theme_primary_light"
                    android:id="@+id/group_tile_person_name"
                    android:paddingTop="13dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/gray_background"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe to Delete"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/theme_primary_light"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/pref_swipeToDelete"
            android:background="#fff"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto Sync"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/theme_primary_light"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/pref_autoSync"
            android:background="#fff"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Server Address"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/theme_primary_light"
            android:layout_margin="9dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="6dp"
            android:id="@+id/pref_serverAddress"
            android:background="#fff"
            android:inputType="numberDecimal"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="Preferences"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/theme_primary_light"
            android:layout_margin="9dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="6dp"
            android:id="@+id/pref_contentPreferences"
            android:background="#fff" />

    </android.support.v7.widget.CardView>


</LinearLayout>